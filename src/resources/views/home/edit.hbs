<div class="container">

    <div class="border border-light mt-3 p-5 bg-light">
        <form action="/{{keyactive._id}}?_method=PUT" method="POST" class="mt-3">
            <div class="form-group  mt-2 ">
                <label>Tên máy tính</label>
                <input type="text" value="{{keyactive.name}}" name="name" class="form-control">
            </div>
            <div class="form-group  mt-2 ">
                <label>Window version</label>
                <input type="text" value="{{keyactive.window_version}}" name="window_version" class="form-control">
            </div>
            <div class="form-group  mt-2 ">
                <label>Key window</label>
                <input type="text" value="{{keyactive.key_window}}" name="key_window" class="form-control">
            </div>
            <div class="form-group  mt-2">
                <label>Office version</label>
                <input type="text" value="{{keyactive.office_version}}" name="office_version" class="form-control">
            </div>
            <div class="form-group  mt-2">
                <label>Key office</label>
                <input type="text" value="{{keyactive.key_office}}" name="key_office" class="form-control">
            </div>
            <div class="form-group  mt-2">
                <label>Link office</label>
                <input type="text" value="{{keyactive.office_link}}" name="office_link" class="form-control">
            </div>
            <div class="form-group  mt-2">
                <label>Username</label>
                <input type="text" value="{{keyactive.username}}" name="username" class="form-control">
            </div>
            <div class="form-group  mt-2">
                <label>Password</label>
                <input type="text" value="{{keyactive.password}}" name="password" class="form-control">
            </div>
             <div class="form-group  mt-2">
                <label>Khóa USB</label>
                <input type="text" value="{{keyactive.usb}}" name="usb" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary mt-3 mb-5">Lưu lại</button>
        </form>
    </div>

</div>

